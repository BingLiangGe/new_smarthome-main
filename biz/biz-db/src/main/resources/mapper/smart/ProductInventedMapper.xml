<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.ProductInventedMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.ProductInvented">
        <id column="id" property="id" />
        <result column="product_id" property="productId" />
        <result column="product_type" property="productType" />
        <result column="thing_model" property="thingModel" javaType="com.lj.iot.common.base.dto.ThingModel"
                typeHandler="com.baomidou.mybatisplus.extension.handlers.FastjsonTypeHandler"/>          <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="customPage" resultMap="BaseResultMap">
        SELECT * FROM product_invented
        <where>
            <if test="params.productId!=null and params.productId!=''">
                product_id = #{params.productId}
            </if>
            <if test="params.search!=null and params.search!=''">
               and custom_ame LIKE CONCAT(#{params.search},"%")
            </if>
        </where>
        ORDER BY id DESC
    </select>

</mapper>
