<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.SkillEntityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.SkillEntity">
        <id column="id" property="id" />
        <result column="intent_name" property="intentName" />
        <result column="entity_key" property="entityKey" />
        <result column="entity_name" property="entityName" />
        <result column="support_product_type" property="supportProductType" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <select id="customPage" resultMap="BaseResultMap">
        SELECT * FROM skill_entity
        <where>
            <if test="params.search!=null and params.search!=''">
                and (intent_name LIKE CONCAT(#{params.search},"%")
                or entity_name LIKE CONCAT(#{params.search},"%")
                or entity_key LIKE CONCAT(#{params.search},"%")
                )
            </if>
        </where>
        ORDER BY id DESC
    </select>
</mapper>
