<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.HotelRoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.HotelRoleMenu">
        <id column="id" property="id"/>
        <result column="hotel_id" property="hotelId"/>
        <result column="role_id" property="roleId"/>
        <result column="menu_id" property="menuId"/>
    </resultMap>

    <select id="permissions" resultType="String">
        select hm.perms
        from hotel_role_menu hrm
                 inner join hotel_menu hm on hrm.menu_id = hm.menu_id
        where hrm.role_id = #{roleId}
          and hrm.hotel_id = #{hotelId}
    </select>

    <select id="mainPermissions" resultType="String">
        select hm.perms
        from hotel_menu hm
    </select>

</mapper>
