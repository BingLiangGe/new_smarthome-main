<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.HotelUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.HotelUser">
        <id column="id" property="id"/>
        <result column="hotel_user_id" property="hotelUserId"/>
        <result column="hotel_id" property="hotelId"/>
        <result column="is_main" property="isMain"/>
        <result column="member_user_id" property="memberUserId"/>
        <result column="is_default" property="isDefault"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="listHotel" resultType="com.lj.iot.biz.base.vo.HotelDataVo">
        SELECT a.id,
               a.hotel_id,
               a.hotel_user_id,
               a.is_default,
               a.is_main,
               b.hotel_name
        FROM hotel_user a
                 JOIN hotel b ON a.hotel_id = b.id
        where a.member_user_id = #{hotelUserId}
        order by a.is_default desc
    </select>
    <select id="defaultHotel" resultType="com.lj.iot.biz.base.vo.HotelDataVo">
        SELECT a.id,
               a.hotel_id,
               a.member_user_id,
               a.is_default,
               a.is_main,
               b.hotel_name
        FROM hotel_user a
                 JOIN hotel b ON a.hotel_id = b.id
        where a.member_user_id = #{hotelUserId}
        order by a.is_default desc limit 1
    </select>

    <select id="customPage" resultType="com.lj.iot.biz.base.vo.HotelUserPageVo">
        SELECT b.mobile,
               b.nickname,
               b.id as userId
        FROM hotel_user a
                 JOIN hotel_user_account b ON a.member_user_id = b.id
        <where>
            <if test="hotelId!=null">
                AND a.hotel_id = #{hotelId}
            </if>
            <if test="params.search!=null and params.search!=''">
                AND (
                b.mobile LIKE CONCAT(#{params.search},"%")
                or b.nickname LIKE CONCAT(#{params.search},"%")
                )
            </if>
        </where>
        order by a.id desc
    </select>

</mapper>
