<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.AppUpgradeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.AppUpgrade">
        <id column="id" property="id" />
        <result column="url" property="url" />
        <result column="soft_ware_version" property="softWareVersion" />
        <result column="details" property="details" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, url, soft_ware_version, details, create_time, update_time
    </sql>
    <select id="newPage" resultType="com.lj.iot.biz.db.smart.entity.AppUpgrade">


    </select>

    <select id="customPage" resultType="com.lj.iot.biz.db.smart.entity.AppUpgrade">


    </select>
    <select id="findByVersionCode" resultType="com.lj.iot.biz.db.smart.entity.AppUpgrade">
        SELECT * FROM app_upgrade  WHERE version_code = (SELECT max(version_code) FROM app_upgrade WHERE type = #{type} ) AND type = #{type}
    </select>
    <select id="findMasterControlUrl" resultType="com.lj.iot.biz.db.smart.entity.AppUpgrade">
        SELECT * FROM app_upgrade  WHERE version_code = (SELECT max(version_code) FROM app_upgrade WHERE type = 2 ) AND type = 2
    </select>

</mapper>
