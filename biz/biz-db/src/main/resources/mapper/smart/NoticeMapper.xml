<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.NoticeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.Notice">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="device_id" property="deviceId"/>
        <result column="home_id" property="homeId"/>
        <result column="hotel_id" property="hotelId"/>
        <result column="remarks" property="remarks"/>
        <result column="room_id" property="roomId"/>
        <result column="type" property="type"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="unHandle" resultType="Long">
        select count(1) from notice n
        <where>
            <if test="userId!=null  and userId!=''">
                AND n.user_id = #{userId}
            </if>
            <if test="hotelId!=null">
                AND n.hotel_id = #{hotelId}
            </if>
            <if test="params.type!=null">
                AND n.type = #{params.type}
            </if>
            <if test="params.startTime != null">
                AND create_time>=#{params.startTime}
            </if>
            <if test="params.endTime != null">
                AND create_time &lt; #{params.endTime}
            </if>
            AND n.state=false
        </where>
    </select>

    <select id="customPage" resultMap="BaseResultMap">
        select * from notice n
        <where>
            <if test="userId!=null  and userId!=''">
                AND n.user_id = #{userId}
            </if>
            <if test="hotelId!=null">
                AND n.hotel_id = #{hotelId}
            </if>
            <if test="params.type!=null">
                AND n.type = #{params.type}
            </if>
            <if test="params.startTime != null">
                AND create_time>=#{params.startTime}
            </if>
            <if test="params.endTime != null">
                AND create_time &lt; #{params.endTime}
            </if>
            <if test="params.homeId != null and params.homeId != ''">
                AND home_id =#{params.homeId}
            </if>
        </where>
        order by id desc
    </select>
</mapper>
