<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.ProductModeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.ProductMode">
        <id column="id" property="id" />
        <result column="product_id" property="productId" />
        <result column="mode_code" property="modeCode" />
        <result column="mode_name" property="modeName" />
        <result column="thing_model" property="thingModel" javaType="com.lj.iot.common.base.dto.ThingModel"
                typeHandler="com.baomidou.mybatisplus.extension.handlers.FastjsonTypeHandler"/>        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, product_id, mode_code, mode_name, thing_model, create_time, update_time
    </sql>

    <select id="customPage" resultMap="BaseResultMap">
        SELECT * FROM product_mode
        <where>
            <if test="params.productId!=null">
                product_id = #{params.productId}
            </if>
            <if test="params.search!=null and params.search!=''">
                AND (
                mode_code LIKE CONCAT(#{params.search},"%")
                OR mode_name LIKE CONCAT(#{params.search},"%")
                )
            </if>
        </where>
        ORDER BY id DESC
    </select>
</mapper>
