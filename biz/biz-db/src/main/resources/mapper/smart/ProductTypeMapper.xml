<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lj.iot.biz.db.smart.mapper.ProductTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lj.iot.biz.db.smart.entity.ProductType">
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="product_type_ray" property="productTypeRay"/>
        <result column="product_type" property="productType"/>
        <result column="product_type_name" property="productTypeName"/>
        <result column="images_url" property="imagesUrl"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="customPage" resultMap="BaseResultMap">
        SELECT * FROM product_type
        <where>
            <if test="params.startTime != null">
                AND create_time>=#{params.startTime}
            </if>
            <if test="params.endTime != null">
                AND create_time &lt; #{params.endTime}
            </if>
            <if test="params.search!=null and params.search!=''">
                AND (
                product_type LIKE CONCAT(#{params.search},"%")
                OR product_type_name LIKE CONCAT(#{params.search},"%")
                )
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <select id="subTypeList" resultType="String">
        SELECT product_type
        FROM product_type
        where product_type_ray LIKE CONCAT(#{productTypeRay}, "%")
    </select>
</mapper>
